@using TGP.Seguridad.BussinessLogic.Dto
@model  Conexiones
<div class="md-card-content">
    <div class="heading_b uk-margin-small-top">Usuarios activos al día @String.Format("{0: dd/MM/yyyy}", Session["DateToday"])</div>
</div>
<div class="md-card-content">
    <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium uk-sortable sortable-handler uk-margin-bottom">
        <div class="uk-width-2-4">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid">
                        <div class="uk-width-1-3 uk-flex uk-flex-bottom uk-flex-center">
                            <i class="material-icons md-48 uk-text-success">contacts</i>
                        </div>
                        <div class="uk-width-1-3">
                            <span class="uk-text-muted uk-text-small">Nominados</span>
                            <h2 class="uk-margin-remove"><span class="countUpMe">@Model.CantidadNominados</span></h2>

                        </div>

                        <div class="uk-width-1-3">
                            <span class="uk-text-muted uk-text-small">Activos</span>
                            <h2 class="uk-margin-remove"><span class="countUpMe">@Model.CantidadNominadosActivos</span></h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-2-4">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid">
                        <div class="uk-width-1-3 uk-flex uk-flex-bottom uk-flex-center">
                            <i class="material-icons md-48 uk-text-warning">contacts</i>
                        </div>
                        <div class="uk-width-1-3">
                            <span class="uk-text-muted uk-text-small">Acreedores</span>
                            <h2 class="uk-margin-remove"><span class="countUpMe">@Model.CantidadAcreedores</span></h2>

                        </div>

                        <div class="uk-width-1-3">
                            <span class="uk-text-muted uk-text-small">Activos</span>
                            <h2 class="uk-margin-remove"><span class="countUpMe">@Model.CantidadAcreedoresActivos</span></h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>