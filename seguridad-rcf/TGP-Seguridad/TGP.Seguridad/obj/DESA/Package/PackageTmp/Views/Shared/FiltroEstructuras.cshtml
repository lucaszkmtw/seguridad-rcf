@model Seguridad.FiltroEstructuras

@{
    List<TGP.Seguridad.BussinessLogic.Dto.EstructuraFuncionalDTO> dataOrg = Model.Estructuras;
    var estructuras = dataOrg.Select(i => new SelectListItem
    {
        Value = i.Codigo.ToString(),
        Text = HttpContext.Current.Server.HtmlDecode(CustomHelper.Truncate(i.DescripcionEstructura, 60).ToString()),
        Selected = Model.EstructuraSelected != null && Model.EstructuraSelected.Codigo == i.Codigo
    });
}

@Html.DropDownList("Estructura", estructuras, new {@class = "selectize md-input label-fixed", id = "filterEstructuras" })


